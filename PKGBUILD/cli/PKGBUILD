# Author: RickaPrincy <rckprincy@gmail.com>
pkgname=templi_cli
pkgver=1.0.1
pkgrel=1
pkgdesc="Templi is a simple tool designed to expedite the template file generation process"
arch=('x86_64')
depends=('rcli' 'libtempli')
url="https://github.com/RickaPrincy/Templi"
license=('MIT')
source=("templi_cli_archlinux@$pkgver.tar.gz::https://github.com/RickaPrincy/Templi/releases/download/v3.2.2/templi_cli_archlinux@$pkgver.tar.gz")

sha256sums=("5d397c6e6d681aa2b4b65ca867f573b8b292e45e00d69fafac4b9dd1917929a3")

package() {
    echo "Installing to \"$pkgdir/usr/\""
    mkdir -p "$pkgdir/usr/bin"
    cp -r "templi_cli_archlinux@$pkgver/bin" "$pkgdir/usr"
}
